extends layout
extends index

block content
  .container
    h1 Team Registration
    p.lead Fill out your details!
    br
    form(role='form', action="/teamsignup",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="teamName", placeholder='Enter Team Name')
      .form-group
        input.form-control(type='text', name="description", placeholder='Enter Team Description')
      .form-group
        input.form-control(type='text', name='category', placeholder='Enter Team Category')

      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel

       