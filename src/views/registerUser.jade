extends layout

block content
  .container
    .enterForm
      h1 Register Account 
      .panel.panel-default
        .panel-heading Register an account to join the team
        .panel-body
          form(role='form', method="post", style='max-width: 300px;')
            h4 Account info
            .form-group
                input.form-control(type='email', name="username", placeholder='Email...' required = 'required')
            .form-group
                input.form-control(type='text', name="firstName", placeholder='First Name...' required = 'required')
            .form-group
                input.form-control(type='text', name="lastName", placeholder='Last Name...' required = 'required')
            .form-group
              input.form-control(type='password', name="password", placeholder='Password...' required = 'required')

            button.btn.btn-primary(type='submit') Submit
            &nbsp;
            a(href='/')
              button.btn.btn-default(type="button") Cancel