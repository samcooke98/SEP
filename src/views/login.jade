extends layout

block content
  .container
    .enterForm
      h1 Login
      if(message)
        .enterForm
          div.well
            span #{message}
        br
      br
      .panel.panel-default
        .panel-heading Log in to your team!
        .panel-body
          form(role='form', action="/login",method="post")
            .form-group
                input.form-control(type='email', name="username", placeholder='Email...' required='required')
            .form-group
              input.form-control(type='password', name="password", placeholder='Password...' required='required')
            h4
            a(href="/reset") Forgot your password?
            br
            br
            button.btn.btn-primary(type='submit') Submit
            &nbsp;
            a(href='/')
              button.btn.btn-default(type="button") Cancel