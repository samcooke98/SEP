extends layout

block content
  .container
    h1 Login Page
    p.lead Log in to your team!
    if(message)
      div.well
        p #{message}
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='email', name="username", placeholder='Email...' required='required')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password...' required='required')
      h4
      a(href="/reset") Forgot your password?
      br
      br
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel