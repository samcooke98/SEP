extends layout

block content
  .container
    h1 Register Account
    p.lead Register an account for your team today!
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Email...')
      .form-group
          input.form-control(type='text', name="firstName", placeholder='First Name...')
      .form-group
          input.form-control(type='text', name="lastName", placeholder='Last Name...')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password...')
      h1 Team Registration
      p.lead Register your team today!
      .form-group
        input.form-control(type='text', name="teamName", placeholder='Enter Team Name')
      .form-group
        input.form-control(type='text', name="description", placeholder='Enter Team Description')
      .form-group
        input.form-control(type='text', name='category', placeholder='Enter Team Category')

      button.btn.btn-default(type='submit') Submit
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
     